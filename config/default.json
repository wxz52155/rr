{
    "name": "Mailsac",
    "port": 3000,
    "baseURL": "http://localhost:3000",
    "forceSSL": false,
    "disablePlugins": false,
    "smtpEnabled": true,
    "normal_smtp_opts": {
        "timeout": 30000,
        "SMTPBanner": "MAILSAC",
        "debug": false
    },
    "workers": 1,
    "secure_smtp_opts": {
        "timeout": 30000,
        "SMTPBanner": "MAILSAC",
        "debug": false,
        "secureConnection": true
    },
    "max_messages": 10,
    "max_message_age_days": 7,
    "removal_interval": 600000,
    "inboxSalt": "definitely-change-this",
    "cookieMaxAge": 1209600000,
    "maxUploadSize": "5mb",
    "mongoURI": "mongodb://localhost/mailsac?authSource=admin",
    "sessionSecret": "change-this",
    "email": {
        "from": "",
        "support": "",
        "notify": ""
    },
    "smtp": {
        "service": "",
        "auth": {
            "user": "",
            "pass": ""
        }
    }
}
